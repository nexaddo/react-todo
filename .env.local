# ===========================
#  Global Local Development
# ===========================

# Node environment
NODE_ENV=development

# ---------------------------
#  Server Configuration
# ---------------------------
SERVER_PORT=3000
CLIENT_ORIGIN=http://localhost:5173
DATA_PATH=./server/data/todos.json
LOG_LEVEL=debug

# ---------------------------
#  Client Configuration
# ---------------------------
# Vite will read this automatically when running locally
VITE_API_BASE=http://localhost:3000/api
VITE_APP_NAME=Quick Todo (Local Dev)
VITE_ENV=development

# ---------------------------
#  Docker Compose Overrides
# ---------------------------
# Compose will auto-load this .env file
# You can reference these with ${VAR} in compose.yaml
COMPOSE_PROJECT_NAME=quick-todo
COMPOSE_FILE=compose.yaml
